source 'https://rubygems.org'

# Main
gem 'rails', '4.2.3'

# Database + Speration
gem 'subengine'
gem 'sqlite3', group: :development
gem 'pg', group: :production
gem 'rails_12factor', group: :production
gem 'puma'

# UI + Frontend Scripts
gem 'sass-rails'
gem 'less-rails'
gem 'therubyracer'
gem 'turbolinks'

gem 'uglifier'
gem 'coffee-rails'

gem 'jquery-rails'
gem 'jquery-ui-rails'

gem 'animate-rails'
gem 'jquery-slimscroll-rails'
gem 'icheck-rails'

gem 'bootstrap-sass'
gem 'gravtastic'
gem 'font-awesome-rails'

# Configuration
gem 'figaro'

# Mailer Functions
gem 'mandrill-rails'

# Serialization + API
gem 'jbuilder', '~> 2.0'
gem 'sdoc', '~> 0.4.0', group: :doc

# Development
gem 'spring', group: :development

# Testing
group :development, :test do
	gem 'rspec-rails', '3.0.1' 
	gem 'capybara', '2.3.0' 
end

# Status and Monitoring
gem 'newrelic_rpm'
